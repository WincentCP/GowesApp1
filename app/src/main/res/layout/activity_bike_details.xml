<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundCream">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">
                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="@drawable/card_white_rounded"
                    android:padding="10dp"
                    android:elevation="2dp"
                    app:tint="@color/textPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Bike"
                    android:textColor="@color/textPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/manrope_bold"/>
            </RelativeLayout>

            <!-- Station Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPH Medan Station"
                android:textColor="@color/textPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/manrope_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select an available bike to view details"
                android:textColor="@color/textSecondary"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/manrope_medium"/>

            <!-- Bike Selection List -->
            <RadioGroup
                android:id="@+id/rg_bike_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/rb_bike_001"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bike_selection_item"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:padding="16dp"
                    android:text="BK-001"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/manrope_bold"
                    android:drawableStart="@drawable/ic_electric_bike_orange"
                    android:drawablePadding="16dp"
                    android:layout_marginBottom="12dp"/>

                <RadioButton
                    android:id="@+id/rb_bike_002"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bike_selection_item"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:padding="16dp"
                    android:text="BK-002"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/manrope_bold"
                    android:drawableStart="@drawable/ic_electric_bike_orange"
                    android:drawablePadding="16dp"
                    android:layout_marginBottom="12dp"/>

                <RadioButton
                    android:id="@+id/rb_bike_003"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bike_selection_item"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:padding="16dp"
                    android:text="BK-003"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/manrope_bold"
                    android:drawableStart="@drawable/ic_electric_bike_orange"
                    android:drawablePadding="16dp"
                    android:layout_marginBottom="12dp"/>

                <RadioButton
                    android:id="@+id/rb_bike_004"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_bike_selection_item"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                    android:padding="16dp"
                    android:text="BK-004"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/manrope_bold"
                    android:drawableStart="@drawable/ic_electric_bike_orange"
                    android:drawablePadding="16dp"
                    android:layout_marginBottom="12dp"/>
            </RadioGroup>

            <!-- Dynamic Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bike Status"
                        android:textColor="@color/textSecondary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical">

                        <!-- Battery -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Battery"
                                android:textSize="12sp"
                                android:textColor="@color/textSecondary"/>
                            <TextView
                                android:id="@+id/tv_battery_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primaryGreen"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <!-- Range -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Range"
                                android:textSize="12sp"
                                android:textColor="@color/textSecondary"/>
                            <TextView
                                android:id="@+id/tv_range"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/textPrimary"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <!-- Status -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status"
                                android:textSize="12sp"
                                android:textColor="@color/textSecondary"/>
                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primaryOrange"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_rent_bike"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:text="Proceed to Payment"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/primaryOrange"
                app:cornerRadius="30dp"
                android:fontFamily="@font/manrope_bold"
                android:enabled="false"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>