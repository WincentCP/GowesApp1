<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundCream">

    <View
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/header_active_ride"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ride_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ride in Progress"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_live_dot_white"
        android:drawablePadding="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_bike_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bike BIKE-832 • Electric"
        android:textColor="@color/white"
        android:background="@drawable/chip_bike_info"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ride_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ride Duration"
        android:textColor="@color/white"
        android:alpha="0.8"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bike_chip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:05"
        android:textColor="@color/white"
        android:textSize="52sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/tv_duration_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@header_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="-40dp"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_cost_green_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Cost"
                        android:textColor="@color/textSecondary"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_current_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 8.000"
                    android:textColor="@color/textPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate: Rp 8.000 per 60 minutes"
                    android:textColor="@color/textSecondary"
                    android:background="@drawable/chip_light_gray"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_park"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Park at UPH Medan Station"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/primaryOrange"
            app:cornerRadius="100dp"
            app:icon="@drawable/ic_location_pin_white"
            app:iconGravity="textStart"
            android:layout_marginTop="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back_home"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Back to Home"
            android:textAllCaps="false"
            android:textColor="@color/primaryOrange"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/dividerColor"
            app:strokeWidth="1dp"
            app:cornerRadius="100dp"
            app:icon="@drawable/ic_home_orange"
            app:iconGravity="textStart"
            android:layout_marginTop="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_ride_safely"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ride Safely"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_shield_white"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Stay in bike lanes when available"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Follow all traffic rules and signals"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Wear a helmet for your safety"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>