<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:background="@color/backgroundCream">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Section -->
            <TextView
                android:id="@+id/tv_welcome_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_back_user"
                android:textColor="@color/textSecondary"
                android:textSize="16sp"
                android:fontFamily="@font/manrope_medium"/>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rider"
                android:textColor="@color/textPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/manrope_bold"/>

            <!-- Wallet Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_gradient_orange"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_wallet_white"
                            app:tint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wallet_balance"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/manrope_medium"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_wallet_balance_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 0"
                        android:textColor="@color/white"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/manrope_bold"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_top_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/top_up_balance"
                        android:textAllCaps="false"
                        android:textColor="@color/primaryOrange"
                        android:backgroundTint="@color/white"
                        app:cornerRadius="100dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/manrope_bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:baselineAligned="false">

                <!-- Stat 1: Total Rides -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/icon_bg_circle_blue"
                            android:padding="10dp"/>

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_rides_blue"
                            android:layout_marginTop="-44dp"/>

                        <TextView
                            android:id="@+id/tv_total_rides"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_rides"
                            android:textSize="11sp"
                            android:textColor="@color/textSecondary"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Stat 2: Time Saved -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginEnd="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/icon_bg_circle_green"
                            android:padding="10dp"/>

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_time_saved"
                            android:layout_marginTop="-44dp"/>

                        <TextView
                            android:id="@+id/tv_time_saved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0h"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_saved"
                            android:textSize="11sp"
                            android:textColor="@color/textSecondary"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Stat 3: CO2 Saved -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/icon_bg_circle_purple"
                            android:padding="10dp"/>

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_co2_saved"
                            android:layout_marginTop="-44dp"/>

                        <TextView
                            android:id="@+id/tv_co2_saved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0kg"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:layout_marginTop="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/co2_saved"
                            android:textSize="11sp"
                            android:textColor="@color/textSecondary"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Station Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_pin"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location_pin"
                            app:tint="@color/primaryOrange"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:id="@+id/iv_station_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/chip_green_background"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/tv_station_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/station_name"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/textPrimary"
                            android:layout_toEndOf="@id/iv_pin"
                            android:layout_toStartOf="@id/iv_station_status"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_centerVertical="true"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/station_subtext"
                        android:textColor="@color/textSecondary"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="28dp"/>

                    <!-- Bike Availability -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/card_payment_selected"
                        android:padding="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_electric_bike_orange_bg"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Electric Bikes"
                                    android:textColor="@color/textSecondary"
                                    android:textSize="12sp"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="bottom">

                                    <!-- FIX: Added ID here -->
                                    <TextView
                                        android:id="@+id/tv_available_bikes_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="24sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/textPrimary"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="available"
                                        android:textColor="@color/textSecondary"
                                        android:textSize="14sp"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginBottom="4dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#1A000000"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:id="@+id/tv_bike_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â— All bikes ready to ride"
                            android:textColor="@color/primaryGreen"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Pricing Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/chip_light_gray"
                        android:padding="16dp"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pricing"
                                android:textColor="@color/textSecondary"
                                android:textSize="12sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All Bikes"
                                android:textColor="@color/textPrimary"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp 8.000 / 60 min"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location_pin_orange_bg"
                            android:padding="4dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jl. Imam Bonjol No. 6"
                                android:textColor="@color/textPrimary"
                                android:textSize="12sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Medan Polonia, Kota Medan 20112"
                                android:textColor="@color/textSecondary"
                                android:textSize="10sp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Active Ride Banner -->
    <androidx.cardview.widget.CardView
        android:id="@+id/active_ride_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/active_ride_banner_bg"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_active_ride_bike"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/active_ride"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:drawableEnd="@drawable/ic_live_dot"
                    android:drawablePadding="6dp"/>
                <TextView
                    android:id="@+id/tv_banner_bike_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bike in use"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to view"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>